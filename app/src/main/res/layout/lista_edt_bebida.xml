<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/carta"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <ImageView
        android:id="@+id/icono_edt_bebida"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/upd_bebida"
        />

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_weight="0.10">
        <TextView
            android:id="@+id/nombre_edt_bebida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textStyle="bold"
            android:text="Nombre producto"/>
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/precio_edt_bebida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textStyle="bold"
            android:text="Precio producto"/>
        <TextView
            android:layout_marginTop="40dp"
            android:id="@+id/cantidad_edt_bebida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="10sp"
            android:text="Cantidad producto"/>

        <Button
            android:id="@+id/delete_edt"
            android:layout_width="32dp"
            android:layout_gravity="right"
            android:layout_height="32dp"
            android:text="x"
            android:layout_below="@+id/cantidad_edt_bebida"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


</LinearLayout>
</android.support.v7.widget.CardView>