<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    >



    <ImageView
       android:layout_gravity="center"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ejemplo_icon"
        android:id="@+id/icono_comida" />

    <RelativeLayout
        android:layout_width="223dp"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp">


        <TextView
        android:id="@+id/nombre_comida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="@string/titulo.comida.lista.comida"
         />

        <Button
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:layout_gravity="top|right"
            android:id="@+id/button"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="68dp"
            android:layout_marginEnd="68dp" />
    </RelativeLayout>

    <TextView
        android:textColor="@color/colorAccent"
        android:id="@+id/precio_comida"
        android:paddingRight="16dp"
        android:layout_width="141dp"
        android:layout_height="33dp"
        android:text="@string/precio.comida.lista.comida"
        android:paddingBottom="16dp"
        android:textSize="12dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/nombre_comida"
        android:layout_toEndOf="@+id/nombre_comida"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp" />

    <TextView
        android:text="Comida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cantidad_comida" />


</LinearLayout>
    </android.support.v7.widget.CardView>
